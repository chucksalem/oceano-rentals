start on starting <%= app %>-<%= name %>
stop on stopping <%= app %>-<%= name %>
respawn

env PORT=<%= port %>
<% engine.env.each do |name,value| -%>
    env <%= name.upcase %>='<%= value.gsub(/'/, "'\"'\"'") %>'
<% end -%>

script
    eval $(cat /etc/environment | sed 's/^/export /')
    cd <%= engine.root %>
    su <%= user %> -C /home/<%= user %>/.rbenv/shims/<%= process.command %>
end script
