<% content_for :hero_title, "Find a Rental".html_safe %> <!-- Hero/Page Title -->
<% content_for :lede, "The rentals you can find at rocky point".html_safe %>

<section class="padded-top scallop-top beige-bg">
    <div class="layout-container">
        <div class="property-search">
            <%= form_tag("/accomodations", {method: 'get', class: 'gw no-gutter'}) do %>
                <fieldset class="g sm-one-whole md-four-twelfths">
                    <label class="is-visually-hidden">Where are you going?</label>
                    <div class="select-style">
                        <select name="area">
                            <option disabled selected>Where are you going?</option>
                            <% areas.each do |a| %>
                            <option value="<%= a[:key] %>"><%= a[:name] %></option>
                            <% end %>
                        </select>
                    </div>
                </fieldset>
                <fieldset class="g sm-one-third md-two-twelfths">
                    <input class="no-borders datepicker" type="text" name="start_date" placeholder="Arrive">
                </fieldset>
                <fieldset class="g sm-one-third md-two-twelfths">
                    <input class="no-borders datepicker" type="text" name="end_date" placeholder="Depart">
                </fieldset>
                <fieldset class="g sm-one-third md-two-twelfths">
                    <label class="is-visually-hidden" for="guests">Guests</label>
                    <div class="select-style">
                        <select name="guests">
                            <option>Guests</option>
                            <option>1</option>
                            <option>2</option>
                            <option>200</option>
                        </select>
                    </div>
                </fieldset>
                <footer class="g md-two-twelfths">
                    <input class="btn btn--green no-min-width max-width" type="submit" value="Search">
                </footer>
            <%- end %>
        </div>

        <ul class="properties-list gw small-gutter">
            <%- @units.each do |unit| %>
            <li class="property g sm-one-half md-one-whole">
                <img class="property-thumb" src="https://unsplash.it/500/350?image=727">
                <div class="details">
                    <div class="gw small-gutter">
                        <div class="g md-three-eighths">
                            <h2><a href="/property/<%= unit.code %>"><%= unit.name %></a></h2>
                            <p class="location"><%= unit.address.street %> <br><%= unit.address.city %>, <%= unit.address.country %></p>
                        </div>
                        <div class="g md-three-eighths">
                            <ul class="offerings">
                                <li>
                                    <i class="icon icon-bath"></i>
                                    <span class="detail"><%= unit.bathrooms %> bath</span>
                                </li>
                                <li>
                                    <i class="icon icon-bed"></i>
                                    <span class="detail"><%= unit.bedrooms %> beds</span>
                                </li>
                                <li>
                                    <i class="icon icon-guests"></i>
                                    <span class="detail"><%= unit.occupancy %> guests</span>
                                </li>
                            </ul>
                        </div>
                        <div class="g md-two-eighths">
                            <span class="type"><%= unit.type %></span>
                        </div>
                    </div>
                </div>
            </li>
            <%- end %>

        </ul>
